<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_history"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="me.ialistannen.isbnlookup.HistoryActivity">

  <android.support.v7.widget.Toolbar
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    android:id="@+id/activity_history_action_bar"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/activity_history_list_view"
    app:title="History"
    android:theme="@style/ThemeOverlay.MyApp.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    style="@style/Widget.MyApp.Toolbar.Solid"/>
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/history_list_no_history"
    android:visibility="visible"
    app:layout_constraintTop_toBottomOf="@+id/activity_history_action_bar"
    app:layout_constraintBottom_toTopOf="@+id/activity_history_button_container"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
    android:id="@+id/activity_history_empty_view"/>
  <me.ialistannen.isbnlookup.view.historylist.HistoryListView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/activity_history_action_bar"
    app:layout_constraintBottom_toTopOf="@+id/activity_history_button_container"
    android:layout_marginTop="16dp"
    android:id="@+id/activity_history_list_view"/>

  <android.support.constraint.ConstraintLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/activity_history_list_view"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="16dp"
    android:id="@+id/activity_history_button_container">

    <Button
      android:text="@string/activity_history_clear_all_button_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/activity_history_clear_all_button"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginStart="16dp"
      android:onClick="onClearAll"/>
  </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
