<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"

  android:background="?android:attr/selectableItemBackground"
  android:clickable="true"
  android:focusable="true"
  >

  <TextView
    android:text="@string/history_list_no_history"
    android:id="@+id/history_list_view_holder_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"
    />
  <TextView
    android:text="@string/history_list_no_history"
    android:id="@+id/history_list_view_holder_isbn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="12sp"

    android:layout_marginTop="4dp"

    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"

    android:layout_below="@+id/history_list_view_holder_title"
    />
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="?android:attr/listDivider"

    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"

    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"

    android:layout_below="@id/history_list_view_holder_isbn"
    android:id="@+id/separator"/>
  <TextView
    android:text="@string/history_list_no_history"
    android:id="@+id/history_list_view_holder_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"

    android:layout_below="@id/separator"
    />
</RelativeLayout>