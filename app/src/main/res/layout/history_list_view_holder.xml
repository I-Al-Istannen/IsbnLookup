<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"

  android:background="?android:attr/selectableItemBackground"
  android:clickable="true"
  android:focusable="true">

  <TextView
    android:text="@string/history_list_no_history"
    android:layout_width="0dp"
    android:id="@+id/history_list_view_holder_title"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/history_list_view_holder_isbn"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_height="wrap_content"/>
  <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/history_list_view_holder_isbn"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/history_list_view_holder_title"
    android:layout_marginEnd="16dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginStart="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="@string/history_list_no_history"
    android:textSize="12sp"/>
  <View
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintTop_toBottomOf="@+id/history_list_view_holder_isbn"
    app:layout_constraintBottom_toTopOf="@+id/history_list_view_holder_date"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginEnd="16dp"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/separator"/>
  <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/history_list_view_holder_date"
    android:layout_marginEnd="16dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="@string/history_list_no_history"/>
</android.support.constraint.ConstraintLayout>